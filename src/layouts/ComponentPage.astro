---
import Layout from './Layout.astro';

interface Props {
  title: string;
}

const { slug } = Astro.params;
const { title } = Astro.props;
const path = Astro.url.pathname;
---

<Layout title={title}>
  <div class="sub-nav">
    <ul>
      <li>
        <a
          href={`/components/${slug}`}
          class={path === `/components/${slug}` ? 'current' : null}>Examples</a
        >
      </li>
      <li>
        <a
          href={`/components/${slug}/api`}
          class={path === `/components/${slug}/api` ? 'current' : null}>API</a>
      </li>
    </ul>
  </div>
  <div class="content">
    <h1>{title}</h1>
    <slot />
  </div>
</Layout>

<style>
  h1 {
    font-size: 48px;
    font-weight: normal;
    margin: 20px 0 0;
    line-height: 1.2;
  }

  .sub-nav {
    align-items: center;
    display: flex;
  }

  .sub-nav > ul {
    display: flex;
    font-size: 16px;
    line-height: 1.2;
    margin: 0;
    padding: 0;
  }

  .sub-nav > ul li {
    display: block;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .sub-nav > ul li a {
    color: var(--color-vscode-blue);
    display: block;
    line-height: 1.3;
    padding: 2px 10px;
    text-decoration: none;
  }

  .sub-nav > ul li a.current {
    background-color: var(--color-vscode-blue);
    color: var(--color-light-gray);
  }
</style>
