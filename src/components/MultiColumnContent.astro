---
export type Props = {
  title: string;
};

const { title } = Astro.props;
---

<div class="MultiColumnContent">
  <aside class="sidebar"><div class="sticky-wrapper"><slot name="sidebar" /></div></aside>
  <article class="body">
    <h1>{title}</h1>
    <slot />
  </article>
</div>

<style>
  .MultiColumnContent {
    display: flex;
  }

  .sidebar {
    order: 2;
    width: 25%;
  }

  .sticky-wrapper {
    position: sticky;
    top: 20px;
  }

  .body {
    order: 1;
    width: 75%;
  }
</style>
