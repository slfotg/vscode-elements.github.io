---
const { slug } = Astro.params;
const path = Astro.url.pathname;

const isExamplePage = path.search(new RegExp(`/components/${slug}/?$`)) > -1;
const isApiPage = path.search(new RegExp(`/components/${slug}/api/?$`)) > -1;
---

<div class="ApiPageSwitcher">
  <ul>
    <li>
      <a href={`/components/${slug}`} class={isExamplePage ? "current" : null}
        >Examples</a
      >
    </li>
    <li>
      <a href={`/components/${slug}/api`} class={isApiPage ? "current" : null}
        >API</a
      >
    </li>
  </ul>
</div>

<style>
  .ApiPageSwitcher {
    align-items: center;
    display: flex;
  }

  .ApiPageSwitcher > ul {
    display: flex;
    font-size: 16px;
    line-height: 1.2;
    margin: 0;
    padding: 0;
  }

  .ApiPageSwitcher > ul li {
    display: block;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .ApiPageSwitcher > ul li a {
    color: var(--color-vscode-blue);
    display: block;
    line-height: 1.3;
    padding: 2px 10px;
    text-decoration: none;
  }

  .ApiPageSwitcher > ul li a.current {
    background-color: var(--color-vscode-blue);
    color: var(--color-light-gray);
  }
</style>
